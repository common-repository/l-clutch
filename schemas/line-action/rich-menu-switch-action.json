{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "rich menu switch action",
  "description": "リッチメニュー切り替えアクション",
  "type": "object",
  "allOf": [{ "$ref": "line-action-base.json" }],
  "required": ["rich_menu_alias_id"],
  "properties": {
    "data": {
      "type": "string",
      "maxLength": 300,
      "minLength": 0,
      "description": "アクションに付加するデータ"
    },
    "rich_menu_alias_id": {
      "type": "string",
      "maxLength": 32,
      "minLength": 0,
      "description": "切り替えるリッチメニューのエイリアスID"
    }
  }
}
